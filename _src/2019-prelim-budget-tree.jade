extends templates/tree-template.jade

block title
  h1 Detailed Breakdown: FY2019 Preliminary Budget

block datasource
  h6
    | Data source:&nbsp;
    a(href = "https://data.world/citizenlabs/grand-rapids-budget") City of Grand Rapids | Citizen Labs Data Collaborative

block disqus_config
  script(type='text/javascript').
    var disqus_identifier = "2017-19 proposed budget tree";

block datafiles
  script.
    var config = {
      /* set values available in dropdown files */
      dropdown_values: {
        "Year": ["FY19"],
        "Account": ["Revenue", "Expense"]
      },
      /* set the default values */
      dropdown_choice: {
        "Year": "FY19",
        "Account": "Expense"
      },
      /* create the url to the data file based on the dropdown choices */
      url: function() {
        return 'data/tree/Prelim.' + this.dropdown_choice["Account"] + "." + this.dropdown_choice["Year"] + ".json";
      }
    };
